@model ToDoApp.Models.TodoItem

@{
    ViewData["Title"] = "Görevi Düzenle";
}

<h2>@ViewData["Title"]</h2>

<!-- Edit Task Form -->
<form asp-controller="Todo" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">Görev Adı</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Kategori</label>
        <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "Name"))" class="form-control"></select>
    </div>

    <div class="form-check">
        <input asp-for="IsComplete" class="form-check-input" />
        <label asp-for="IsComplete" class="form-check-label">Tamamlandı mı?</label>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>
