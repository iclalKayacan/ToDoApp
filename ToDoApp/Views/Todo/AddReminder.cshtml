
@model ToDoApp.Models.ReminderViewModel

@{
    Layout = null;
}

<h2>Add Reminder for @Model.TaskName</h2>

<form asp-controller="Todo" asp-action="AddReminder" method="post">
    <input type="hidden" name="taskId" value="@Model.TaskId" />
    <div class="form-group">
        <label for="reminderDateTime">Reminder Date and Time:</label>
        <input type="datetime-local" id="reminderDateTime" name="reminderDateTime" required />
    </div>
    <button type="submit" class="btn btn-primary">Add Reminder</button>
</form>

